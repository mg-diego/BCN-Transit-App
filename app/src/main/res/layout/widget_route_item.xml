<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/logo_white"
    android:paddingTop="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <ImageView
            android:id="@+id/img_line_id"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/metro_l1"
            android:contentDescription="Información"
            android:clickable="true"
            android:focusable="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingStart="8dp">

            <TextView
                android:id="@+id/txt_direction_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dirección"
                android:textSize="10sp"
                android:textColor="#666666" />
            <TextView
                android:id="@+id/txt_direction_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fondo"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000000" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="10dp">

        <!-- Primer tren -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/time_badge_background"
            android:padding="4dp"
            android:paddingBottom="8dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/txt_train_number_1"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:background="@drawable/circle_background"
                android:gravity="center" />

            <TextView
                android:id="@+id/txt_time_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 min 22s"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Segundo tren -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/time_badge_background"
            android:padding="4dp">

            <TextView
                android:id="@+id/txt_train_number_2"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="2"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:background="@drawable/circle_background"
                android:gravity="center" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/txt_time_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 min 02s"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>